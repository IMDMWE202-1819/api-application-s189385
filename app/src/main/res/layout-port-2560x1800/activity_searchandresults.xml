<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundsearch"
        tools:context=".searchandresults">

    <EditText
            android:layout_width="595dp"
            android:layout_height="98dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/artistname"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.031"
            android:gravity="center"
            android:textSize="40dp"
            android:background="@drawable/my_button"
            android:hint="Artist/Group name" android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:layout_width="147dp"
            android:layout_height="125dp"
            android:id="@+id/submitbutton"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.136"
            android:onClick="PopulateTracks"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="860dp"
            android:layout_height="410dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintVertical_bias="0.901"
            android:id="@+id/track_recyclerView"/>
    <ImageView
            android:layout_width="445dp"
            android:layout_height="371dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ArtistImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.352" app:layout_constraintHorizontal_bias="0.501"/>
</android.support.constraint.ConstraintLayout>